project TDD is

   for Source_Dirs use ("src/**");
   for Object_Dir use "build\obj";
   for Exec_Dir use "build";
   for Main use ("tdd_main.adb");

   package Ide is
      for Vcs_Kind use "Git";
      for Documentation_Dir use "docs";
      for Vcs_Repository_Root use "https://github.com/AdmaJonse/tdd-ada.git";
   end Ide;

   package Builder is
      for Executable ("tdd_main.adb") use "tdd";
   end Builder;

end TDD;

